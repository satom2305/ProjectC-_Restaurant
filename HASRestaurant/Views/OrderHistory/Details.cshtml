@model HASRestaurant.Context.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    th{
        background-color: #fb5849;
    }
    .dl-horizontal{
        margin-left: 30px;
    }
    h2 {
        margin-top: 120px;
        margin-bottom: 20px;
        margin-left: 30px;
    }
    h5{
        float:right;
        margin-right:50px;
    }
    dt{
        margin-bottom:20px;
        margin-top:20px;
    }
    .anhfood {
        height: 70px;
        width: 70px;
    }
</style>
<h2>Order</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            @Html.DisplayNameFor(model => model.CustomerName): @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dd>
            @Html.DisplayNameFor(model => model.TotalPrice): @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dd>
            @Html.DisplayNameFor(model => model.OrderDate): @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dd>
            @Html.DisplayNameFor(model => model.Phone): @Html.DisplayFor(model => model.Phone)
        </dd>
        <dd>
            @Html.DisplayNameFor(model => model.Address): @Html.DisplayFor(model => model.Address)
        </dd>
        <dd>
            @Html.DisplayNameFor(model => model.Note): @Html.DisplayFor(model => model.Note)
        </dd>
        <dd>
            @Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Order Details:
        </dt>
    </dl>
</div>
<table class="table" border="1">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Image
        </th>
        <th>
            Quantity
        </th>
        <th>
            Unit Price
        </th>
    </tr>

    @foreach (var item in Model.OrderDetails)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Product.ProductName)
    </td>
    <td>
        <img src="@item.Product.Image" class="anhfood">
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UnitPrice)
    </td>
</tr>
    }

</table>
<h5>
    @Html.ActionLink("Back to List", "Index")
</h5>
