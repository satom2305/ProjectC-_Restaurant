<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet">

    <title>HAS restaurant</title>
    <link rel="icon" href="~/Content/assets/images/icon1.ico">


    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/font-awesome.css">

    <link rel="stylesheet" href="~/Content/assets/css/templatemo-klassy-cafe.css">

    <link rel="stylesheet" href="~/Content/assets/css/owl-carousel.css">

    <link rel="stylesheet" href="~/Content/assets/css/lightbox.css">

</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="index.html" class="logo">
                            <img src="~/Content/assets/images/logo3-removebg-preview.png" align="klassy cafe html template">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
                            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Menu" ? "active" : "")">@Html.ActionLink("Menu", "Index", "Menu")</li>
                            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Cart" ? "active" : "")">@Html.ActionLink("Cart", "Index", "Cart")</li>
                            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "OrderHistory" ? "active" : "")">@Html.ActionLink("Order History", "Index", "OrderHistory")</li>
                            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "ContactUs" ? "active" : "")">@Html.ActionLink("Contact Us", "Index", "ContactUs")</li>


                            @*<li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "CheckOut" ? "active" : "")">@Html.ActionLink("CheckOut", "Index", "CheckOut")</li>*@
                            @{

                                if (Session["user"] != null)
                                {
                                    if (((HASRestaurant.Context.Account)Session["user"]).Role == "Admin")
                                    {
                                        <li class="">
                                            @Html.ActionLink("Manager", "Index", "Admin/AdminHome")
                                        </li>
                                        <li class="">
                                            @Html.ActionLink("Logout", "Logout", "Login")
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="">
                                            @Html.ActionLink("Logout", "Logout", "Login")
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="">
                                        @Html.ActionLink("Login", "Index", "Login")
                                    </li>
                                }
                            }
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->
    <!-- ***** Main Banner Area Start ***** -->
    @RenderBody()




    <!-- ***** Footer Start ***** -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-xs-12">
                    <div class="right-text-content">
                        <ul class="social-icons">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                            <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="logo">
                        <a href="index.html"><img src="~/Content/assets/images/logo3_white-removebg-preview.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-4 col-xs-12">
                    <div class="left-text-content">
                        <p>
                            © Copyright Klassy Cafe Co.

                            <br>Design: TemplateMo
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- jQuery -->
    <script src="~/Content/assets/js/jquery-2.1.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/Content/assets/js/popper.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="~/Content/assets/js/owl-carousel.js"></script>
    <script src="~/Content/assets/js/accordions.js"></script>
    <script src="~/Content/assets/js/datepicker.js"></script>
    <script src="~/Content/assets/js/scrollreveal.min.js"></script>
    <script src="~/Content/assets/js/waypoints.min.js"></script>
    <script src="~/Content/assets/js/jquery.counterup.min.js"></script>
    <script src="~/Content/assets/js/imgfix.min.js"></script>
    <script src="~/Content/assets/js/slick.js"></script>
    <script src="~/Content/assets/js/lightbox.js"></script>
    <script src="~/Content/assets/js/isotope.js"></script>

    <!-- Global Init -->
    <script src="~/Content/assets/js/custom.js"></script>
    <script>
        $(function () {
            var selectedClass = "";
            $("p").click(function () {
                selectedClass = $(this).attr("data-rel");
                $("#portfolio").fadeTo(50, 0.1);
                $("#portfolio div").not("." + selectedClass).fadeOut();
                setTimeout(function () {
                    $("." + selectedClass).fadeIn();
                    $("#portfolio").fadeTo(50, 1);
                }, 500);

            });
        });
    </script>
</body>

</html>